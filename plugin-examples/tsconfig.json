{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "typings",
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"paths": {
			"lightweight-charts": ["../dist/typings.d.ts", "../dist"],
			"lightweight-charts/*": ["../dist/*", "../src/*"]
		},
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": ["src"]
}
